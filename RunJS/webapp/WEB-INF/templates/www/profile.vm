.mainresource{
margin:10px 30px;
min-width:1000px;
border:1px solid #CCCCCC;
}
#space_title{height:100px;}
#space_content{margin:15px 15px;}
.type_tab{
	border-bottom:3px solid #ccc;
}
.type_tab a{
	top:3px;
	position: relative;
	display:inline-block;
	//border-bottom:3px solid #357999;
	height:40px;
	background-color:#EAEAEA;
	text-decoration:none;
