	color:#357999;
	border-bottom:3px solid #357999;
}
.user_info{
	margin:15px 15px 15px 15px; 
	height:100px;
}
.user_info .portrait{padding:5px 5px;border:1px solid #AAA;}
.user_info span{
	float: left;
}
.user_info .info .username{font-size:18px;margin:3px 5px 5px 20px;font-weight:bold;}
